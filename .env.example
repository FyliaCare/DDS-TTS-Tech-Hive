# ===========================================
# DATABASE CONFIGURATION (Neon PostgreSQL)
# ===========================================
# Get your connection string from: https://console.neon.tech
# Format: postgresql://username:password@host/database?sslmode=require
DATABASE_URL="postgresql://username:password@ep-xxx-xxx.us-east-2.aws.neon.tech/techhive?sslmode=require"

# For connection pooling (Recommended for production)
# DIRECT_URL is the direct database URL
# DATABASE_URL is the pooled connection URL
DIRECT_URL="postgresql://username:password@ep-xxx-xxx.us-east-2.aws.neon.tech/techhive?sslmode=require"

# ===========================================
# NEXTAUTH CONFIGURATION
# ===========================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-here-generate-with-openssl"
NEXTAUTH_URL="http://localhost:3000"

# In production (Render):
# NEXTAUTH_URL="https://your-app-name.onrender.com"

# ===========================================
# PAYSTACK CONFIGURATION
# ===========================================
# Get from: https://dashboard.paystack.com/#/settings/developers
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY="pk_test_xxxxxxxxxxxxxxxxxxxxx"
PAYSTACK_SECRET_KEY="sk_test_xxxxxxxxxxxxxxxxxxxxx"

# ===========================================
# EMAIL CONFIGURATION (SMTP)
# ===========================================
# Gmail SMTP settings (create app password)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-specific-password"
EMAIL_FROM="DDS & TTS Tech Hive <noreply@ddsttstechhive.com>"

# Alternative: SendGrid, Mailgun, AWS SES, etc.
# SMTP_HOST="smtp.sendgrid.net"
# SMTP_PORT="587"
# SMTP_USER="apikey"
# SMTP_PASSWORD="your-sendgrid-api-key"

# ===========================================
# WHATSAPP BUSINESS API
# ===========================================
# Get from: https://developers.facebook.com/docs/whatsapp
WHATSAPP_PHONE_NUMBER_ID="your-phone-number-id"
WHATSAPP_ACCESS_TOKEN="your-whatsapp-access-token"
WHATSAPP_BUSINESS_ACCOUNT_ID="your-business-account-id"

# ===========================================
# CLOUDINARY (IMAGE UPLOADS - Optional)
# ===========================================
# Get from: https://cloudinary.com/console
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NODE_ENV="development"
# In production: NODE_ENV="production"

# Application URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"
# In production: NEXT_PUBLIC_APP_URL="https://your-app-name.onrender.com"

# API URL (usually same as app URL)
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# ===========================================
# OPTIONAL: ANALYTICS & MONITORING
# ===========================================
# Google Analytics
# NEXT_PUBLIC_GA_TRACKING_ID="G-XXXXXXXXXX"

# Sentry Error Tracking
# SENTRY_DSN="https://xxxxx@sentry.io/xxxxx"

# ===========================================
# OPTIONAL: ADDITIONAL SERVICES
# ===========================================
# Redis (for caching - if using Upstash)
# REDIS_URL="redis://default:xxxxx@region.upstash.io:6379"

# AWS S3 (for file storage)
# AWS_ACCESS_KEY_ID="your-access-key"
# AWS_SECRET_ACCESS_KEY="your-secret-key"
# AWS_REGION="us-east-1"
# AWS_S3_BUCKET="your-bucket-name"
